<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
   <div id="error_explanation">
    <h2><%= @post.errors.count %>件のエラーがありますので、決まった入力をお願いします。<h2>
    <ul>
    
    <%= @post.errors.full_messages.each do |msg|%>
     <li><%= msg %></li>
    <% end %>
    </ul>
   </div>
  <% end %>

  <div class="post_content">
    <%= form.label :"つぶやいてみよう！" %><br>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to'あなたのつぶやき一覧へ',posts_path %>